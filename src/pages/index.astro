---
import LandingHeader from '../components/LandingHeader.astro';
import HeroSection from '../components/HeroSection.astro';
import Layout from '../layouts/Layout.astro';
import ModelYSection from '../components/ModelYSection.astro';
---

<Layout>
  <LandingHeader />

  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-y-scroll overflow-x-hidden scroll-smooth"
  >
    <div class="snap-center">
      <HeroSection />
    </div>

    <div class="snap-center">
      <ModelYSection />
    </div>
  </main>
</Layout>
